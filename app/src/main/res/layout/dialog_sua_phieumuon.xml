<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Sửa phiếu mượn"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Mã phiếu mượn" />

    <EditText
        android:id="@+id/dialogSua_edt_mapm_Phieumuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_margin="10sp" />

    <Spinner
        android:id="@+id/dialogSua_spinner_tentv_phieumuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp" />

    <Spinner
        android:id="@+id/dialogSua_tensach_phieumuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp" />

    <TextView
        android:id="@+id/dialogSua_txt_ngay_phieumuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="ngaythue" />

    <TextView
        android:id="@+id/dialogSua_txt_tienthue_phieumuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="tienthue" />

    <CheckBox
        android:id="@+id/dialogSua_chk_trangthai_phieumuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Trả sách" />

    <Button
        android:id="@+id/dialogSua_btn_phieumuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@drawable/bo_goc"
        android:text="Sửa phiếu mượn" />
</LinearLayout>