<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/masach_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="1111111111" />

            <TextView
                android:id="@+id/tensach_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/masach_item"
                android:layout_margin="5sp"
                android:text="1111111111" />

            <TextView
                android:id="@+id/giathue_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tensach_item"
                android:layout_margin="5sp"
                android:text="1111111111" />

            <TextView
                android:id="@+id/loaisach_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/giathue_item"
                android:layout_margin="5sp"
                android:text="1111111111" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/masach_item"
                android:layout_alignParentEnd="true"
                android:layout_margin="10sp"
                android:id="@+id/delsach_item"
                android:background="@color/white"
                android:src="@drawable/baseline_delete" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>